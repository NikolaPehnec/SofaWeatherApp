<resources>
    <!-- Base application theme. -->
    <style name="Theme.SofaWeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/on_color</item>
        <item name="colorOnPrimary">@color/on_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/on_color</item>
        <item name="colorOnSecondary">@color/on_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="MyActionBarTheme" parent="Widget.Design.CollapsingToolbar">
        <item name="android:textColorSecondary">@color/neutrals_n_lv_1</item>

    </style>

    <style name="CustomSnackbarTheme">
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/my_snackbar_background</item>
        <item name="android:layout_margin">32dp</item>
    </style>


    <style name="ButtonErrorStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/ButtonLabelErrorCenter</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/status_error_snackbar</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="colorOutline">@color/status_error_snackbar</item>
        <item name="textOutlineColor">@color/status_error_snackbar</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/status_error_snackbar</item>
    </style>
</resources>